---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
  prevProject?: { title: string; slug: string };
  nextProject?: { title: string; slug: string };
}

const { title, prevProject, nextProject } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth bg-obs-black text-gray-200">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Observables Exhibition" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Observables</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Space+Mono:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">

    <!-- Clerk -->
    <script
      async
      crossorigin="anonymous"
      data-clerk-publishable-key="pk_test_cGF0aWVudC1kcnVtLTkxLmNsZXJrLmFjY291bnRzLmRldiQ"
      src="https://cdn.jsdelivr.net/npm/@clerk/clerk-js@latest/dist/clerk.browser.js"
    ></script>
	</head>
	<body class="relative min-h-screen">
    
    <!-- Noise Texture -->
    <div class="noise-overlay"></div>

    <Header prevProject={prevProject} nextProject={nextProject} />
    
    <main class="relative z-10 pt-24 min-h-[80vh]">
		  <slot />
    </main>

    <Footer />
	</body>
</html>
