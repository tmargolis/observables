---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
  prevProject?: { title: string; slug: string };
  nextProject?: { title: string; slug: string };
  hideFooter?: boolean;
  hideWalkthrough?: boolean;
  hasWalkthroughButton?: boolean;
}

const { title, prevProject, nextProject, hideFooter = false, hideWalkthrough = false, hasWalkthroughButton = false } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth bg-obs-black text-gray-200">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Observables Exhibition" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="192x192" href="/android-chrome-192x192.png" />
		<link rel="icon" type="image/png" sizes="512x512" href="/android-chrome-512x512.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Observables</title>
		
		<!-- Open Graph / Social Media Preview -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={`${title} | Observables`} />
		<meta property="og:description" content="Observables Exhibition - A convergence of space and time" />
		<meta property="og:image" content={`${Astro.site}/images/og-image.jpg`} />
		<meta property="og:url" content={`${Astro.site}${Astro.url.pathname}`} />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:image" content={`${Astro.site}/images/og-image.jpg`} />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Space+Mono:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">

    <!-- Model Viewer (AR) -->
    <script type="module" src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"></script>

    <!-- Clerk -->
    <script
      async
      crossorigin="anonymous"
      data-clerk-publishable-key="pk_test_cGF0aWVudC1kcnVtLTkxLmNsZXJrLmFjY291bnRzLmRldiQ"
      src="https://cdn.jsdelivr.net/npm/@clerk/clerk-js@latest/dist/clerk.browser.js"
    ></script>
	</head>
	<body class="relative min-h-screen">
    
    <!-- Noise Texture -->
    <div class="noise-overlay"></div>

    <Header prevProject={prevProject} nextProject={nextProject} hideWalkthrough={hideWalkthrough} />
    
    <main class="relative z-10 pt-32 min-h-[80vh]">
		  <slot />
    </main>

    {!hideFooter && <Footer hasWalkthroughButton={hasWalkthroughButton} />}
	</body>
</html>
