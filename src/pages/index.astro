---
import Layout from '../layouts/Layout.astro';
import { projects } from '../data/projects';
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="min-h-[80vh] flex flex-col justify-center items-center text-center px-4 relative">
      <h2 class="font-serif text-5xl md:text-8xl lg:text-9xl mb-8 leading-tight animate-float text-white">
          Observables
      </h2>
      <div class="max-w-2xl font-mono text-sm md:text-base text-gray-400 mb-12 space-y-4">
          <p class="uppercase tracking-widest text-indigo-300">A convergence of the tectonic and the ethereal.</p>
          <p>Observables explores the friction between geological permanence and the fleeting nature of digital atmosphere.</p>
      </div>
      <a href="/walkthrough/" class="border border-white/20 text-white font-mono text-xs px-8 py-4 uppercase tracking-[0.2em] hover:bg-white hover:text-black transition-all duration-500">
          Virtual Walkthrough
      </a>
  </section>

  <!-- Works Grid -->
  <section id="works" class="py-24 px-6 md:px-12 max-w-7xl mx-auto">
      <div class="flex justify-between items-end mb-16 border-b border-white/10 pb-6">
        <h3 class="font-serif text-3xl italic">The Collection</h3>
        <a href="/works/" class="font-mono text-xs text-gray-500 hover:text-white uppercase tracking-widest">View All</a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-12">
        {projects.map((project, index) => (
          <a href={`/works/${project.slug}/`} class="group block">
             <div class="aspect-[3/4] bg-gray-900 w-full overflow-hidden relative mb-4">
                <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-colors z-10"></div>
                <img 
                  src={project.heroImage} 
                  alt={project.title} 
                  class="object-cover w-full h-full grayscale group-hover:grayscale-0 group-hover:scale-105 transition-all duration-700 ease-out"
                />
             </div>
             <div>
                <span class="block font-mono text-xs text-indigo-400 mb-1 tracking-widest">0{index + 1}</span>
                <h4 class="font-serif text-xl text-white group-hover:text-glow transition-all">{project.title}</h4>
                <p class="font-mono text-[10px] text-gray-500 mt-2 uppercase">{project.year} | {project.medium}</p>
             </div>
          </a>
        ))}
      </div>
  </section>
</Layout>
