---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Inquire">
  <section class="min-h-screen flex flex-col justify-center items-center px-6 md:px-12 text-center">
      <h1 class="font-serif text-5xl md:text-7xl mb-6">Inquire</h1>
      <p class="font-mono text-sm text-gray-400 mb-12 max-w-lg">
          For acquisitions, exhibitions, and press inquiries, please contact the studio directly.
      </p>

      <div class="space-y-8 font-mono text-sm uppercase tracking-widest">
          <div>
              <span class="block text-xs text-gray-600 mb-2">General Inquiries</span>
              <a href="mailto:todd@observables.art" class="text-2xl text-white hover:text-indigo-400 transition-colors">todd@observables.art</a>
          </div>

          <div>
               <span class="block text-xs text-gray-600 mb-2">Studio Location</span>
               <p class="text-white">Chicago, IL / Earth</p>
          </div>
      </div>
  </section>
</Layout>
