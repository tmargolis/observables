---
import Layout from '../../layouts/Layout.astro';
import { projects } from '../../data/projects';
---

<Layout title="Works">
  <section class="pt-32 pb-24 px-6 md:px-12 max-w-7xl mx-auto">
      <h1 class="font-serif text-5xl md:text-7xl mb-16 text-center">Selected Works</h1>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        {projects.map((project, index) => (
          <a href={`/works/${project.slug}`} class="group block relative">
             <div class="aspect-[4/3] bg-gray-900 w-full overflow-hidden mb-6 relative">
                <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-colors z-10"></div>
                <img 
                  src={project.heroImage} 
                  alt={project.title} 
                  class="object-cover w-full h-full grayscale group-hover:grayscale-0 group-hover:scale-105 transition-all duration-700 ease-out"
                />
             </div>
             <div class="flex justify-between items-start border-t border-white/10 pt-4">
               <div>
                  <h4 class="font-serif text-2xl text-white group-hover:text-glow transition-all">{project.title}</h4>
                  <p class="font-mono text-xs text-gray-500 mt-1 uppercase">{project.year} | {project.medium}</p>
               </div>
               <span class="font-mono text-xs text-indigo-400 tracking-widest">0{index + 1}</span>
             </div>
          </a>
        ))}
      </div>
  </section>
</Layout>
